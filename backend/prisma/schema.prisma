generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(uuid())
  name                  String
  email                 String    @unique
  password              String
  phoneNumber           String
  profilePicture        String?
  active                Boolean   @default(true)
  passwordResetToken    String?
  expPasswordResetToken DateTime?
  twoFactorAuthEnable   Boolean   @default(false)
  createdAt             DateTime  @default(now())

  profiles UserProfile[]

  @@map("users")
}

model Profile {
  id          String   @id @default(uuid())
  name        String
  description String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  users UserProfile[]
  permitions ProfilePermition[]

  @@map("profiles")
}

model Permition {
  id              String @id @default (uuid())
  name            String
  descrition      String
  active          Boolean @default(true)
  createdAt       DateTime @default(now())

  profiles ProfilePermition[]

  @@map("permition")
}

model UserProfile {
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId String

  @@id([userId, profileId])
  @@map("users_profiles")
}

model ProfilePermition {
  profile     Profile @relation(fields: [profileId], references: [id])
  profileId   String
  permition   Permition @relation(fields: [permitionId], references: [id])
  permitionId String

  @@id([profileId, permitionId ])
  @@map("profiles_permission")
}

